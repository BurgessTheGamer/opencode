{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "opencode",
  "private": true,
  "type": "module",
  "packageManager": "bun@1.2.14",
  "scripts": {
    "typecheck": "bun run --filter='*' typecheck",
    "postinstall": "./scripts/hooks"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "catalog": {
      "typescript": "5.8.2",
      "@types/node": "22.13.9",
      "zod": "3.24.2",
      "ai": "4.3.16"
    }
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.5",
    "husky": "9.1.7",
    "lint-staged": "16.1.2",
    "prettier": "3.5.3",
    "sst": "3.17.6",
    "ultracite": "5.0.29"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sst/opencode"
  },
  "license": "MIT",
  "prettier": {
    "semi": false
  },
  "overrides": {
    "zod": "3.24.2"
  },
  "trustedDependencies": [
    "esbuild",
    "protobufjs",
    "sharp"
  ],
  "patchedDependencies": {
    "ai@4.3.16": "patches/ai@4.3.16.patch"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "npx ultracite format"
    ]
  }
}